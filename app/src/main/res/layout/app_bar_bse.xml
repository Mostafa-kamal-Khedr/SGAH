<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.activity.BaseActivity">
    <!-- Frame to load Home Fragments -->
    <FrameLayout
        android:id="@+id/home_fl_activity_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/home_bn_home_bottom_nav"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|exitUntilCollapsed" />

    <!-- Home Activity Bottom Navigation -->



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/home_bn_home_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_gravity="bottom"
        android:background="@drawable/shape_white_top_tweenty_redius_bottom_nav"
        android:foreground="?attr/selectableItemBackground"
        app:itemBackground="?android:attr/windowBackground"
        app:layout_anchorGravity="bottom"
        app:layout_scrollFlags="scroll|enterAlways"
        app:menu="@menu/bottomnavigation_menu" />



</RelativeLayout>
